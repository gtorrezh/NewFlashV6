<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="project1.uf1.dam.newflashv6.MainActivity">

    <LinearLayout
        android:background="@color/blanco"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/Id_GridLayout">

            <ImageView
                android:layout_width="135dp"
                android:layout_height="130dp"
                android:id="@+id/imageView"
                android:layout_row="0"
                android:layout_column="0" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="220dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:weightSum="1"
                android:id="@+id/Id_Item">

                <TextView
                    android:id="@+id/rss_title_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Titulo"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripcion"
                    android:id="@+id/rss_description"
                    android:layout_weight="0.56"
                    android:layout_below="@+id/linearLayout"
                    android:layout_alignLeft="@+id/linearLayout"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </GridLayout>

        <LinearLayout
            android:background="@color/colorBarra"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_gravity="center_horizontal"></LinearLayout>
    </LinearLayout>
</RelativeLayout>
